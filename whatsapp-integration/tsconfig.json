{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@modelcontextprotocol/sdk/*": [
        "node_modules/@modelcontextprotocol/sdk/dist/esm/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "../whatsapp-integration/**", "../../whatsapp-integration/**", "whatsapp-integration/**"]
}


