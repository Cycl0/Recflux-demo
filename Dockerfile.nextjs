FROM node:18-alpine AS base

# Install dependencies only when needed
FROM base AS deps
WORKDIR /app

# Install dependencies based on the preferred package manager
COPY package.json package-lock.json* ./
RUN npm install --legacy-peer-deps

# Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app

# Bring node_modules from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY package.json ./

# Accept build arguments BEFORE build so Next can read them during compilation
ARG NEXT_PUBLIC_SUPABASE_URL
ARG NEXT_PUBLIC_SUPABASE_ANON_KEY
ARG STRIPE_SECRET_KEY=sk_test_dummy
ARG STRIPE_PUBLISHABLE_KEY=pk_test_dummy
ARG NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
ARG STRIPE_WEBHOOK_SECRET=whsec_dummy
ARG THUMBNAIL_API_KEY=
ARG OPENROUTER_API_KEY=
ARG OPENAI_API_KEY=
ARG NEXT_PUBLIC_GOOGLE_CLIENT_ID=
ARG NEXT_PUBLIC_GOOGLE_CLIENT_ID_ANDROID=
ARG SUPABASE_SERVICE_ROLE_KEY=
ARG KAFKA_BROKERS=
ARG VERCEL_TOKEN=

# Next.js anonymous telemetry
ENV NEXT_TELEMETRY_DISABLED=1

# Export ARGs to ENV for build-time evaluation
ENV NEXT_PUBLIC_SUPABASE_URL=$NEXT_PUBLIC_SUPABASE_URL \
    NEXT_PUBLIC_SUPABASE_ANON_KEY=$NEXT_PUBLIC_SUPABASE_ANON_KEY \
    STRIPE_SECRET_KEY=$STRIPE_SECRET_KEY \
    STRIPE_PUBLISHABLE_KEY=$STRIPE_PUBLISHABLE_KEY \
    NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=$NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY \
    STRIPE_WEBHOOK_SECRET=$STRIPE_WEBHOOK_SECRET \
    THUMBNAIL_API_KEY=$THUMBNAIL_API_KEY \
    OPENROUTER_API_KEY=$OPENROUTER_API_KEY \
    OPENAI_API_KEY=$OPENAI_API_KEY \
    NEXT_PUBLIC_GOOGLE_CLIENT_ID=$NEXT_PUBLIC_GOOGLE_CLIENT_ID \
    NEXT_PUBLIC_GOOGLE_CLIENT_ID_ANDROID=$NEXT_PUBLIC_GOOGLE_CLIENT_ID_ANDROID \
    SUPABASE_SERVICE_ROLE_KEY=$SUPABASE_SERVICE_ROLE_KEY \
    KAFKA_BROKERS=$KAFKA_BROKERS \
    VERCEL_TOKEN=$VERCEL_TOKEN

# Copy only what is needed to build
COPY next.config.js tsconfig.json ./
COPY public ./public
COPY app ./app

# Build once with the correct env in place
RUN npm run build

# Production image, copy all the files and run next
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Add runtime environment variables
ENV THUMBNAIL_API_KEY=""
ENV OPENROUTER_API_KEY=""
ENV OPENAI_API_KEY=""
ENV NEXT_PUBLIC_GOOGLE_CLIENT_ID=""
ENV NEXT_PUBLIC_GOOGLE_CLIENT_ID_ANDROID=""
ENV NEXT_PUBLIC_SUPABASE_URL=""
ENV NEXT_PUBLIC_SUPABASE_ANON_KEY=""
ENV STRIPE_SECRET_KEY=""
ENV STRIPE_WEBHOOK_SECRET=""
ENV SUPABASE_SERVICE_ROLE_KEY=""
ENV KAFKA_BROKERS=""
ENV VERCEL_TOKEN=""

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

COPY --from=builder /app/public ./public

# Set the correct permission for prerender cache
RUN mkdir .next
RUN chown nextjs:nodejs .next

# Automatically leverage output traces to reduce image size
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

USER nextjs

EXPOSE 3000

ENV PORT=3000

CMD ["node", "server.js"] 